<VirtualHost *:80>
	ServerAdmin webmaster@localhost

	DocumentRoot /home/data/site/redmine/public

	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	<Directory /home/data/site/redmine/public>
		Options FollowSymLinks MultiViews
		AllowOverride None
		Order allow,deny
		allow from all
	</Directory>
	RailsBaseURI /redmine
	PassengerUserSwitching on
	PassengerUser redmine
	PassengerGroup redmine

	ScriptAlias /cgi-bin/ /usr/lib/cgi-bin/
	<Directory "/usr/lib/cgi-bin">
		AllowOverride None
		Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
		Order allow,deny
		Allow from all
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/redmine_comisys_com_error.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel warn

	CustomLog ${APACHE_LOG_DIR}/redmine_comisys_com_access.log combined
</VirtualHost>
